<h1>HOME</h1>

 <%= form_with url: cars_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query, params[:query], class: "form-control me-2", placeholder: "Search Car" %>
        <%= button_tag "Search", type: "submit", class: "btn btn-outline-success" %>
      <% end %>

<div class="container text-center">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
      <% @cars.each do |car| %>
        <div class="col">
          <div class="card px-2">
            <img class="card-img-top" src="<%= asset_path('auto.png') %>"/>
            <div class="card-body">
              <h1><%= link_to car.model, car_path(car.user) %></h1>
              <h2><%= car.brand %></h2>
              <p><%= car.year %></p>
              <p>üìç <%= car.user.city %></p>
              <p>U$S <%= car.cost_per_day %>0- p/day</p>
              <p>Owner: <%= link_to car.user.user, user_path(car.user) %></p>
              <p><%= link_to "Make a Booking", new_car_booking_path(car_id: car.id) %></p>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
