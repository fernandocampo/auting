<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :user,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "username", class: "form-control", placeholder: "Username" } %>
          <%= f.input :name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "name", class: "form-control", placeholder: "Name" } %>
          <%= f.input :last_name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "last name", class: "form-control", placeholder: "Last Name" } %>
          <%= f.input :age,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "age", class: "form-control", placeholder: "Age" } %>
          <%= f.input :city,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "city", class: "form-control", placeholder: "City" } %>
          <%= f.input :phone,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "phone", class: "form-control", placeholder: "Phone" } %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" } %>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" } %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
