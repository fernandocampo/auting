<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center">Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group text-center">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control", placeholder: "Enter your email" } %>
        </div>

        <div class="text-center">
          <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
